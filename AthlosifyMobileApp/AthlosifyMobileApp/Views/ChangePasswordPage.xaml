<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AthlosifyMobileApp.Views.ChangePasswordPage">
    <ContentPage.Content>
		<StackLayout Margin="20" VerticalOptions="CenterAndExpand">
			<Entry BackgroundColor="White" PlaceholderColor="#707070" Placeholder="Old Password" IsPassword="True" Text="{Binding OldPassword}" />
			<Entry BackgroundColor="White" PlaceholderColor="#707070" Placeholder="New Password" IsPassword="True" Text="{Binding Password}" />
			<Entry BackgroundColor="White" PlaceholderColor="#707070" Placeholder="Confirm Password" IsPassword="True" Text="{Binding ConfirmPassword}" />
			<Button BackgroundColor="RoyalBlue" CornerRadius="30" HeightRequest="40" TextColor="White" Text="Change password" Command="{Binding ChangePasswordCommand}"  />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>