<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AthlosifyMobileApp.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Margin="10" VerticalOptions="CenterAndExpand" BackgroundColor="AliceBlue">
			<Label FontSize="Large" TextColor="#707070" HorizontalOptions="Center" Text="Forgot Password" />
			<Label FontSize="Micro" Margin="20,10,20,0" TextColor="#707070" HorizontalOptions="Center" Text="To recover your password, you need to enter your registered email address. We will send you the new password to you." />
			<Entry Margin="40" Placeholder="Email" BackgroundColor="White" PlaceholderColor="#707070" Text="{Binding Email}" />
			<Button Margin="20" BackgroundColor="RoyalBlue" CornerRadius="30" HeightRequest="40" TextColor="White" Text="Send" Command="{Binding SendCommand}" />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>